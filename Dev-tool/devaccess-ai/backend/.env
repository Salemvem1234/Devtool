# DevAccess AI Environment Configuration

# Application
DEBUG=true
SECRET_KEY=your-super-secret-key-change-this-in-production
ENCRYPTION_KEY=your-encryption-key-for-credentials

# Database
DATABASE_URL=sqlite+aiosqlite:///./devaccess_ai.db
DATABASE_ECHO=false

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# CORS
ALLOWED_HOSTS=http://localhost:3000,http://localhost:8000

# HashiCorp Vault (optional)
VAULT_URL=http://localhost:8200
VAULT_TOKEN=your-vault-token
VAULT_MOUNT_POINT=secret

# Email Services
TEMP_EMAIL_PROVIDERS=https://api.mailinator.com,https://api.guerrillamail.com

# Web Automation
SELENIUM_GRID_URL=
PLAYWRIGHT_BROWSER_TYPE=chromium
AUTOMATION_TIMEOUT=30
AUTOMATION_HEADLESS=true

# AI/NLP
HUGGINGFACE_API_KEY=your-huggingface-api-key
SPACY_MODEL=en_core_web_sm

# CAPTCHA Services (optional)
CAPTCHA_SERVICE_API_KEY=
CAPTCHA_SERVICE_URL=

# Security
PASSWORD_MIN_LENGTH=12
PASSWORD_INCLUDE_SYMBOLS=true

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Monitoring (optional)
SENTRY_DSN=
